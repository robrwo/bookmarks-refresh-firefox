{

    "manifest_version": 2,
    "name": "Refresh Your Bookmarks",
    "version": "0.2.1",
    "description": "Update your bookmarks when pages have been moved or deleted",
    "author": "Robert Rothenberg",
    "homepage_url": "https://github.com/robrwo/bookmarks-refresh-firefox",

    "icons": {
        "48": "icons/link-black-48.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "bookmarks",
        "activeTab",
        "webRequest",
        "notifications",
        "<all_urls>"
    ]
}
